@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h2>
    @TempData["success"]
</h2>

<h1>Index Category</h1>

<div class="container p-3">

    <div class="col-6">
        <h2 class="text-primary">Category List</h2>
    </div>

    <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle-fill"></i> &nbsp; Create Category
        </a>
    </div>
</div>

<br /> <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Category Name
            </th>

            <th>
                Display Order
            </th>

            <th>Date & Time</th>
        </tr>
    </thead>

    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
            <td width="50%">
                @obj.Name
            </td>


        <td width="50%">
                @obj.DisplayOrder
        </td>


        <td width="50%">
                @obj.CreatedDateTime
        </td>

        <td>
            <div class="w-75 btn-group" role="group">
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
            </div>
        </td>


                <td>
                    <div class="w-75 btn-group" role="group">
                       

                        <form method="post" asp-controller="Category" asp-action="DeletePOST" asp-route-id="@obj.Id">
                            <button><i class="bi bi-trash3-fill"></i>Delete</button>
                        </form>
                    
                    </div>
                </td>

               
            </tr>

        }
    </tbody>

</table>
